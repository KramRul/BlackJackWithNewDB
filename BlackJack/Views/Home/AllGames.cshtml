@model IEnumerable<BlackJack.BLL.Models.GameViewModel>
@{
    ViewBag.Title = "Список игр";
}

<table class="table">
    <tr><th>GameID</th><th>User Name</th><th>Balance</th><th>Bet</th><th>Dealer Id</th></tr>
    @foreach (var game in Model)
    {
    <tr>
        <td>@game.Id</td>
        <td>@game.Player.UserName</td>
        <td>@game.Player.Balance</td>
        <td>@game.Player.Bet</td>
        <td>@game.Dealer.Id</td>
        <td>
            <form asp-action="Delete" asp-controller="Home" asp-route-id="@game.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                    Удалить
                </button>
            </form>
        </td>
    </tr>
    }
</table>

